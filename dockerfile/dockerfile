FROM aspnmy/debian:base

ARG S6_OVERLAY_VERSION=3.2.0.0

# 更新软件包列表
RUN apt-get update

# 安装nginx, xz-utils 和 openssh-server
RUN apt-get install -y nginx xz-utils openssh-server vim

# github下载最新版s6-overlay
ADD https://github.com/just-containers/s6-overlay/releases/download/v${S6_OVERLAY_VERSION}/s6-overlay-noarch.tar.xz /tmp
ADD https://github.com/just-containers/s6-overlay/releases/download/v${S6_OVERLAY_VERSION}/s6-overlay-x86_64.tar.xz /tmp

# 解压s6-overlay
RUN tar -C / -Jxpf /tmp/s6-overlay-noarch.tar.xz
RUN tar -C / -Jxpf /tmp/s6-overlay-x86_64.tar.xz

# 复制自定义的sshd_config文件
COPY sshd_config /etc/ssh/sshd_config

# 复制SSH公钥(如果使用密钥登录)
# COPY authorized_keys /root/.ssh/authorized_keys
# RUN chmod 600 /root/.ssh/authorized_keys

# 创建sshd服务脚本
COPY sshd.run /etc/services.d/sshd/run
COPY sshd.finish /etc/services.d/sshd/finish



# 生成运行目录配置权限
RUN  mkdir /var/run/sshd && chmod 700 /var/run/sshd && chown root:root /var/run/sshd
# 设置初始root密码
RUN echo 'root:root@#1314' | chpasswd

# Quick Run
# 暴露622端口
EXPOSE 622


# 清理缓存减小容器体积
RUN rm -rf /var/lib/apt/lists/* && rm -rf /tmp/*

# 设置ENTRYPOINT
ENTRYPOINT ["/init"]